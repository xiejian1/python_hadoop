<!-- Put site-specific property overrides in this file. -->

<configuration>
 <!--配置副本的数目-->
 <property>
  <name>hdfs.replication</name>
  <value>1</value>
 </property>
 <!--配置hdfs元数据存储位置-->
 <property>
  <name>dfs.namenode.name.dir</name>
  <value>/home/xieq/hadoop/name</value>
 </property>
 <!--配置hdfs数据的存储位置-->
 <property>
  <name>dfs.datanode.data.dir</name>
  <value>/home/xieq/hadoop/data</value>
 </property>
 <!--配置hdfs的namenode web ui的地址-->
 <property>
  <name>dfs.http.address</name>
  <value>master:50070</value>
 </property>
 <!--配置hdfs的snn web ui 地址-->
 <property>
  <name>dfs.secondary.http.address</name>
  <value>master:50090</value> 
 </property>
 <!--是否开启web操作hdfs-->
 <property>
  <name>dfs.webhdfs.enabled</name>
  <value>true</value>
 </property>
 <!--是否启用hdfs权限-->
 <property>
   <name>dfs.permissions</name>
  <value>false</value>
 </property>
</configuration>
